# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False
PRODUCTION=True
ALLOWED_HOSTS=yourdomain.pythonanywhere.com,packaxis.ca,www.packaxis.ca

# Database Configuration (PostgreSQL - PythonAnywhere)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=your_pythonanywhere_username$packaxis
DB_USER=your_pythonanywhere_username
DB_PASSWORD=your_postgres_password
DB_HOST=your_pythonanywhere_username-postgres.postgres.pythonanywhere-services.com
DB_PORT=10136
DB_CONN_MAX_AGE=60
DB_ATOMIC_REQUESTS=True

# Email Configuration
EMAIL_HOST=smtp.hostinger.com
EMAIL_PORT=465
EMAIL_USE_SSL=True
EMAIL_HOST_USER=your-email@packaxis.ca
EMAIL_HOST_PASSWORD=your_email_password_here

# Stripe Payment Configuration
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Backblaze B2 Storage (S3-compatible)
USE_B2_STORAGE=True
B2_KEY_ID=your_b2_application_key_id
B2_APPLICATION_KEY=your_b2_application_key
B2_BUCKET=packaxis-media
B2_ENDPOINT=s3.us-east-005.backblazeb2.com
B2_REGION=us-east-005
B2_CUSTOM_DOMAIN=media.packaxis.ca

# Sentry Error Monitoring (optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# Redis Cache (optional - not needed on PythonAnywhere)
REDIS_URL=
