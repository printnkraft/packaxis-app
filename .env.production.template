# PackAxis Packaging - Environment Variables Template
# Copy these to Railway Dashboard → Settings → Variables

# ============================================================================
# DJANGO CORE SETTINGS
# ============================================================================
SECRET_KEY=CHANGE-THIS-TO-RANDOM-50-CHAR-STRING
DEBUG=False
DJANGO_SETTINGS_MODULE=packaxis_app.settings
PYTHONUNBUFFERED=1
PORT=8000

# Add ALL your domains (comma-separated, no spaces)
ALLOWED_HOSTS=your-app.up.railway.app,yourdomain.com,www.yourdomain.com

# ============================================================================
# DATABASE (Automatically set by Railway PostgreSQL addon)
# ============================================================================
# DATABASE_URL=postgresql://user:pass@host:port/dbname
# ⚠️ Railway sets this automatically - DO NOT manually add

# ============================================================================
# BACKBLAZE B2 STORAGE (REQUIRED FOR MEDIA FILES)
# ============================================================================
USE_B2_STORAGE=True
B2_KEY_ID=your_backblaze_key_id
B2_APPLICATION_KEY=your_backblaze_application_key
B2_BUCKET=packaxis-media
B2_ENDPOINT=s3.us-west-004.backblazeb2.com
B2_REGION=us-west-004

# Optional: Cloudflare CDN domain for faster media delivery
B2_CUSTOM_DOMAIN=cdn.yourdomain.com

# ============================================================================
# EMAIL CONFIGURATION (Gmail example)
# ============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-16-char-app-password
DEFAULT_FROM_EMAIL=Packaxis Packaging <noreply@packaxis.ca>

# ============================================================================
# SENTRY ERROR MONITORING (Optional but recommended)
# ============================================================================
SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_ENVIRONMENT=production

# ============================================================================
# STRIPE PAYMENT GATEWAY (If using payments)
# ============================================================================
STRIPE_PUBLIC_KEY=pk_live_...
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ============================================================================
# SECURITY SETTINGS (Optional enhancements)
# ============================================================================
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ============================================================================
# REDIS CACHE (Optional - add Redis addon on Railway first)
# ============================================================================
# REDIS_URL=redis://default:password@host:port
# ⚠️ Railway sets this automatically if you add Redis addon

# ============================================================================
# DATABASE CONFIGURATION (Only if NOT using DATABASE_URL)
# ============================================================================
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=packaxis_db
# DB_USER=postgres
# DB_PASSWORD=strong_password_here
# DB_HOST=containers-us-west-123.railway.app
# DB_PORT=5432
# DB_CONN_MAX_AGE=600
# DB_ATOMIC_REQUESTS=True

# ============================================================================
# RATE LIMITING & SECURITY
# ============================================================================
RATELIMIT_ENABLE=True
AXES_ENABLED=True
AXES_FAILURE_LIMIT=5
AXES_COOLOFF_TIME=1

# ============================================================================
# CLOUDFLARE (Optional - for additional features)
# ============================================================================
# CLOUDFLARE_API_TOKEN=your_api_token
# CLOUDFLARE_ZONE_ID=your_zone_id

# ============================================================================
# QUICK GENERATE SECRET KEY
# ============================================================================
# Run this in Python to generate a secure SECRET_KEY:
#
# python manage.py shell
# >>> from django.core.management.utils import get_random_secret_key
# >>> print(get_random_secret_key())
#
# Or use this one-liner:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
